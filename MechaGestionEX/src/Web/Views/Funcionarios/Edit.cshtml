@model Infrastructure.Persistence.Models.funcionario
@{
    ViewData["Title"] = "Editar Funcionario";
}

@section Styles {
    <link rel="stylesheet" href="~/css/select2.css" />
}

<h1 class="mb-4">Editar Funcionario</h1>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="id" />

    <div class="col-md-4">
        <label asp-for="rut" class="form-label"></label>
        <input asp-for="rut" class="form-control" />
        <span asp-validation-for="rut" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="nombre" class="form-label"></label>
        <input asp-for="nombre" class="form-control" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="especialidad" class="form-label"></label>
        <input asp-for="especialidad" class="form-control" />
        <span asp-validation-for="especialidad" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="activo" class="form-label">Activo</label>
        <select asp-for="activo" class="form-select">
            <option value="true">Sí</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="activo" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="tipo_id" class="form-label">Tipo</label>
        <select asp-for="tipo_id" id="tipoSelect" class="form-select select2" data-placeholder="Seleccione un tipo">
            <option value="">Seleccione un tipo</option>
            @foreach (var t in ViewBag.Tipos)
            {
                <option value="@t.id">@t.nombre</option>
            }
        </select>
        <span asp-validation-for="tipo_id" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/funcionario_crud.js"></script>
}