@model Infrastructure.Persistence.Models.funcionario
@{
    ViewData["Title"] = "Editar Funcionario";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Editar Funcionario</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" class="row">
            <input type="hidden" asp-for="id" />

            <div class="col-sm-12 col-md-4 form-group">
                <label asp-for="rut" class="control-label"></label>
                <input asp-for="rut" class="form-control" />
                <span asp-validation-for="rut" class="text-danger"></span>
            </div>
            <div class="col-sm-12 col-md-6 form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="col-sm-12 col-md-6 form-group">
                <label asp-for="especialidad" class="control-label"></label>
                <input asp-for="especialidad" class="form-control" />
                <span asp-validation-for="especialidad" class="text-danger"></span>
            </div>
            <div class="col-sm-12 col-md-4 form-group">
                <label asp-for="activo" class="control-label">Activo</label>
                <select asp-for="activo" class="form-control">
                    <option value="true">Sí</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="activo" class="text-danger"></span>
            </div>
            <div class="col-sm-12 col-md-4 form-group">
                <label asp-for="tipo_id" class="control-label">Tipo</label>
                <select asp-for="tipo_id" id="tipoSelect" class="form-control select2" data-placeholder="Seleccione un tipo">
                    <option value="">Seleccione un tipo</option>
                    @foreach (var t in ViewBag.Tipos)
                    {
                        <option value="@t.id">@t.nombre</option>
                    }
                </select>
                <span asp-validation-for="tipo_id" class="text-danger"></span>
            </div>

            <div class="col-12 form-group d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a class="btn btn-secondary" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/funcionario_crud.js"></script>
}