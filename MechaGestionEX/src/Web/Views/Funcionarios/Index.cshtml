@model IEnumerable<Infrastructure.Persistence.Models.funcionario>
@{
    ViewData["Title"] = "Funcionarios";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Funcionarios</h6>
        <a class="btn btn-primary" asp-action="Create">+ Nuevo Funcionario</a>
    </div>
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info">No hay registros para mostrar.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>RUT</th>
                            <th>Nombre</th>
                            <th>Especialidad</th>
                            <th>Activo</th>
                            <th>Tipo</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var f in Model)
                        {
                            <tr>
                                <td>@f.id</td>
                                <td>@f.rut</td>
                                <td>@f.nombre</td>
                                <td>@f.especialidad</td>
                                <td>@(f.activo ? "Sí" : "No")</td>
                                <td>@(f.tipo?.nombre ?? "Sin Tipo")</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Details" asp-route-id="@f.id">Detalles</a>
                                    <a class="btn btn-sm btn-outline-warning me-1" asp-action="Edit" asp-route-id="@f.id">Editar</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@f.id">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
