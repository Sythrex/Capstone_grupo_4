@model IEnumerable<Infrastructure.Persistence.Models.funcionario>
@{
    ViewData["Title"] = "Funcionarios";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Funcionarios</h6>
        <a class="btn btn-primary" asp-action="Create">+ Nuevo Funcionario</a>
    </div>
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info">No hay registros para mostrar.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th class="text-nowrap">ID</th>
                            <th class="text-nowrap">RUT</th>
                            <th>Nombre</th>
                            <th>Especialidad</th>
                            <th class="text-nowrap">Activo</th>
                            <th class="text-nowrap">Tipo</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var f in Model)
                        {
                            <tr>
                                <td class="text-nowrap">@f.id</td>
                                <td class="text-nowrap">@f.rut</td>
                                <td>@f.nombre</td>
                                <td>@f.especialidad</td>
                                <td class="text-nowrap">@(f.activo ? "Sí" : "No")</td>
                                <td class="text-nowrap">@(f.tipo?.nombre ?? "Sin Tipo")</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm d-flex flex-wrap justify-content-end">
                                        <a class="btn btn-outline-secondary me-1 mb-1" asp-action="Details" asp-route-id="@f.id">Detalles</a>
                                        <a class="btn btn-outline-warning me-1 mb-1" asp-action="Edit" asp-route-id="@f.id">Editar</a>
                                        <a class="btn btn-outline-danger mb-1" asp-action="Delete" asp-route-id="@f.id">Eliminar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
