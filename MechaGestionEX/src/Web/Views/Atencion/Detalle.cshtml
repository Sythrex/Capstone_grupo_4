@model Infrastructure.Persistence.Models.atencion

@{
    ViewData["Title"] = "Detalle de la Atención";
    var bitacoras = ViewBag.Bitacoras as List<Infrastructure.Persistence.Models.bitacora> ?? new List<Infrastructure.Persistence.Models.bitacora>();
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Detalle de Atención</h6>
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-user me-2"></i>
                        <strong>Información del Cliente y Vehículo</strong>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Cliente</dt>
                            <dd class="col-sm-8">
                                <a href="#">@Model.cliente?.nombre</a>
                            </dd>

                            <dt class="col-sm-4">RUT Cliente</dt>
                            <dd class="col-sm-8">@Model.cliente?.rut</dd>

                            <dt class="col-sm-4">Vehículo</dt>
                            <dd class="col-sm-8">
                                <a href="#">@Model.vehiculo?.patente</a>
                            </dd>

                            <dt class="col-sm-4">Tipo</dt>
                            <dd class="col-sm-8">@Model.vehiculo?.tipo?.nombre</dd>

                            <dt class="col-sm-4">Año</dt>
                            <dd class="col-sm-8">@Model.vehiculo?.anio</dd>

                            <dt class="col-sm-4">Kilometraje</dt>
                            <dd class="col-sm-8">@Model.kilometraje_ingreso.ToString("N0") km</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-calendar-alt me-2"></i>
                        <strong>Detalles de la Cita</strong>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Fecha Agendada</dt>
                            <dd class="col-sm-8">@Model.agenda?.fecha_agenda.ToString("dd/MM/yyyy HH:mm")</dd>

                            <dt class="col-sm-4">Título</dt>
                            <dd class="col-sm-8">@Model.agenda?.titulo</dd>

                            <dt class="col-sm-4">Estado</dt>
                            <dd class="col-sm-8">@Model.agenda?.estado</dd>

                            <dt class="col-sm-4">Taller</dt>
                            <dd class="col-sm-8">@Model.taller?.razon_social</dd>

                            <dt class="col-sm-4">Mecánico Asignado</dt>
                            <dd class="col-sm-8">@Model.mecanico?.nombre</dd>

                            <dt class="col-sm-4">Administrativo</dt>
                            <dd class="col-sm-8">@Model.administrativo?.nombre</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-wrench me-2"></i>
                <strong>Servicios Realizados</strong>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @if (Model.servicios.Any())
                    {
                        foreach (var servicio in Model.servicios)
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <strong>@servicio.tipo_servicio.nombre</strong>
                                    <span>Subtotal: $@servicio.sub_total?.ToString("N0")</span>
                                </div>
                                <p class="text-muted">@servicio.descripcion</p>
                                @if (servicio.servicio_repuestos.Any())
                                {
                                    <ul class="list-group list-group-flush mt-2">
                                        @foreach (var rep in servicio.servicio_repuestos)
                                        {
                                            <li class="list-group-item small">
                                                @rep.repuesto_unidades.repuesto.sku - @rep.repuesto_unidades.repuesto.nombre (Cantidad: @rep.cantidad, Stock Disponible: @(rep.repuesto_unidades.stock_disponible - (rep.repuesto_unidades.stock_reservado ?? 0)))
                                            </li>
                                        }
                                    </ul>
                                }
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-muted">Aún no se han agregado servicios a esta atención.</li>
                    }
                </ul>
                <button class="btn btn-primary mt-3" data-toggle="modal" data-target="#agregarServicioModal">Agregar Servicio</button>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-history me-2"></i>
                <strong>Bitácora de Cambios</strong>
            </div>
            <div class="card-body">
                @if (bitacoras.Any())
                {
                    <ul class="list-group">
                        @foreach (var bitacora in bitacoras)
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <span>@bitacora.descripcion</span>
                                    <small class="text-muted">@bitacora.created_at.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No hay entradas en la bitácora para esta atención.</p>
                }
                <form asp-action="AgregarBitacora" method="post" class="mt-3">
                    <input type="hidden" name="id" value="@Model.id" />
                    <div class="input-group">
                        <select name="tipo" id="tipo" class="form-control select2" placeholder="Seleccione tipo...">
                            <option value="Nota">Nota</option>
                            <option value="Actualización">Actualización</option>
                            <option value="Problema">Problema</option>
                        </select>
                        <input type="text" name="descripcion" class="form-control" placeholder="Agregar nueva entrada a la bitácora..." />
                        <button type="submit" class="btn btn-outline-primary">Agregar</button>
                    </div>
                </form>
            </div>
        </div>

        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmarEliminarModal">Eliminar Atención</button>
    </div>
</div>

<div class="modal fade" id="agregarServicioModal" tabindex="-1" role="dialog" aria-labelledby="agregarServicioLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="agregarServicioLabel">Agregar Servicio</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="agregarServicioForm">
                    <input type="hidden" name="atencion_id" value="@Model.id" />
                    <div class="mb-3">
                        <label class="form-label">Tipo de Servicio</label>
                        <select id="tipo_servicio_id" name="tipo_servicio_id" class="form-select"></select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea name="descripcion" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Precio Mano de Obra</label>
                        <input type="number" id="precio_mano_obra" name="precio_mano_obra" class="form-control" value="0" min="0" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Repuestos</label>
                        <div id="repuestos-container"></div>
                        <button type="button" id="agregarRepuestoBtn" class="btn btn-outline-primary mt-2">Agregar Repuesto</button>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Subtotal Repuestos</label>
                        <div class="form-control" id="total_repuestos_display">0</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Subtotal Total</label>
                        <div class="form-control" id="sub_total_display">0</div>
                        <input type="hidden" id="sub_total" name="sub_total" value="0" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" id="guardarServicioBtn" class="btn btn-primary">Guardar Servicio</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmarEliminarModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Confirmar Eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas eliminar esta atención y su cita agendada? Esta acción no se puede deshacer.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <form asp-action="Eliminar" asp-controller="Atencion" method="post">
                    <input type="hidden" name="id" value="@Model.id" />
                    <button type="submit" class="btn btn-danger">Sí, Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/atencion-servicio.js"></script>
}