@model Infrastructure.Persistence.Models.atencion

@{
    ViewData["Title"] = "Editar Atención";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Editar Atención</h6>
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </a>
    </div>
    <div class="card-body">
        <form asp-action="Editar">
            <input type="hidden" asp-for="id" />

            <div class="form-group">
                <label asp-for="kilometraje_ingreso" class="control-label">Kilometraje de Ingreso</label>
                <input asp-for="kilometraje_ingreso" class="form-control" />
                <span asp-validation-for="kilometraje_ingreso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="observaciones" class="control-label">Observaciones</label>
                <textarea asp-for="observaciones" class="form-control" rows="4"></textarea>
                <span asp-validation-for="observaciones" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="estado" class="control-label">Estado de la Atención</label>
                <input asp-for="estado" class="form-control" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Detalle" asp-route-id="@Model.id" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}