@{
    ViewData["Title"] = "Agenda de Horas";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Agenda de Atenciones</h6>
        <a href="@Url.Action("Create", "Agenda")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nueva hora
        </a>
    </div>
    <div class="card-body">
        <p class="text-muted mb-3">Haz clic en un slot disponible en el calendario para agendar una nueva hora en ese horario.</p>
        <div id="calendario" class="p-sm-2 p-md-0"></div>
    </div>
</div>

@section Scripts {
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.13/index.global.min.js'></script>
    <script src="~/js/agenda-calendario.js"></script>
}