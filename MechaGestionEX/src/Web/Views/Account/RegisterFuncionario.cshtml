@model Web.Models.RegisterFuncionarioViewModel

@{
    ViewData["Title"] = "Registro de Funcionario";
}

<h3>Registro de Funcionario</h3>

<form asp-action="RegisterFuncionario">
    <div class="mb-3">
        <label asp-for="Rut" class="form-label">RUT</label>
        <input asp-for="Rut" class="form-control" />
        <span asp-validation-for="Rut" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Especialidad" class="form-label">Especialidad</label>
        <input asp-for="Especialidad" class="form-control" />
        <span asp-validation-for="Especialidad" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TipoId" class="form-label">Tipo de Funcionario</label>
        <select asp-for="TipoId" class="form-select" asp-items="ViewBag.TiposFuncionario"></select>
        <span asp-validation-for="TipoId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TallerId" class="form-label">Taller Asignado</label>
        <select asp-for="TallerId" class="form-select" asp-items="ViewBag.Talleres"></select>
        <span asp-validation-for="TallerId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NombreUsuario" class="form-label">Nombre de Usuario</label>
        <input asp-for="NombreUsuario" class="form-control" />
        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Contraseña</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}