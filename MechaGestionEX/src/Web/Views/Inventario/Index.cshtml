@model List<Web.Models.InventarioViewModel>

@{
    ViewData["Title"] = "Control de Inventario";
}

<h2>Control de Inventario</h2>

<div class="mb-3">
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#agregarRepuestoModal">Agregar Repuesto</button>
</div>

<div class="mb-3">
    <input type="text" id="searchInput" class="form-control" placeholder="Buscar por nombre o SKU...">
    <select id="categoriaSelect" class="form-select mt-2" data-placeholder="Filtrar por categoría">
        <option></option>
        @foreach (var cat in ViewBag.Categorias)
        {
            <option value="@cat.id">@cat.nombre</option>
        }
    </select>
</div>

<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>SKU</th>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Categoría</th>
            <th>Stock Disponible</th>
            <th>Stock Reservado</th>
            <th>Precio Unitario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.StockDisponible < 5 ? "table-danger" : "")">
                <td>@item.Sku</td>
                <td>@item.Nombre</td>
                <td>@item.Marca</td>
                <td>@item.CategoriaNombre</td>
                <td>@item.StockDisponible</td>
                <td>@item.StockReservado</td>
                <td>@item.PrecioUnitario</td>
                <td>
                    <button class="btn btn-sm btn-warning editarStock" data-id="@item.RepuestoId">Editar Stock</button>
                    <button class="btn btn-sm btn-info verLogs" data-id="@item.RepuestoId">Ver Logs</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Agregar Repuesto -->
<div class="modal fade" id="agregarRepuestoModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar Repuesto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="form-check">
                    <input type="radio" name="tipoAgregar" value="existente" checked> Seleccionar Existente
                    <input type="radio" name="tipoAgregar" value="nuevo"> Crear Nuevo
                </div>
                <div id="existenteForm">
                    <select id="repuestoSelect" class="form-select select2" data-placeholder="Buscar repuesto..."></select>
                </div>
                <div id="nuevoForm" style="display:none;">
                    <input type="text" id="nuevoSku" class="form-control" placeholder="SKU">
                    <input type="text" id="nuevoNombre" class="form-control mt-2" placeholder="Nombre">
                    <input type="text" id="nuevaMarca" class="form-control mt-2" placeholder="Marca">
                    <select id="nuevaCategoria" class="form-select mt-2">
                        @foreach (var cat in ViewBag.Categorias)
                        {
                            <option value="@cat.id">@cat.nombre</option>
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="guardarAgregar">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Editar Stock -->
<div class="modal fade" id="editarStockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Stock</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editRepuestoId">
                <input type="number" id="variacionStock" class="form-control" placeholder="Variación (positivo o negativo)">
                <input type="number" id="nuevoPrecio" class="form-control mt-2" placeholder="Nuevo Precio Unitario (opcional)">
                <textarea id="notaStock" class="form-control mt-2" placeholder="Nota"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="guardarStock">Guardar</button>
            </div>
        </div>
    </div>
</div>

