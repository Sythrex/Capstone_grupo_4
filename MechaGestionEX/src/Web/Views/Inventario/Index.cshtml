@model List<Web.Models.InventarioViewModel>

@{
    ViewData["Title"] = "Control de Inventario";
}

<h2>Control de Inventario</h2>

<div class="mb-3">
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#agregarRepuestoModal">Agregar Repuesto</button>
    <button class="btn btn-warning ms-2" id="editarStockGlobal">Editar Stock</button>
    <button class="btn btn-success ms-2" id="guardarCambios" style="display:none;">Guardar Cambios</button>
    <button class="btn btn-secondary ms-2" id="cancelarEdicion" style="display:none;">Cancelar Edición</button>
</div>

<table id="inventarioTable" class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>SKU</th>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Categoría</th>
            <th>Stock Disponible</th>
            <th>Stock Reservado</th>
            <th>Precio Unitario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<div class="modal fade" id="notaBatchModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nota para Cambios</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <textarea id="notaBatch" class="form-control" placeholder="Nota para los logs de inventario (opcional)"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="confirmarGuardar">Confirmar y Guardar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Agregar Repuesto -->
<div class="modal fade" id="agregarRepuestoModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar Repuesto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="form-check">
                    <input type="radio" name="tipoAgregar" value="existente" checked> Seleccionar Existente
                    <input type="radio" name="tipoAgregar" value="nuevo"> Crear Nuevo
                </div>
                <div id="existenteForm">
                    <table id="repuestosTable" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>SKU</th>
                                <th>Nombre</th>
                                <th>Marca</th>
                                <th>Categoría</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div id="nuevoForm" style="display:none;">
                    <input type="text" id="nuevoSku" class="form-control" placeholder="SKU">
                    <input type="text" id="nuevoNombre" class="form-control mt-2" placeholder="Nombre">
                    <input type="text" id="nuevaMarca" class="form-control mt-2" placeholder="Marca">
                    <select id="nuevaCategoria" class="form-select mt-2">
                        @foreach (var cat in ViewBag.Categorias)
                        {
                            <option value="@cat.id">@cat.nombre</option>
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="guardarAgregar">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Editar Stock -->
<div class="modal fade" id="editarStockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Stock</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editRepuestoId">
                <input type="number" id="variacionStock" class="form-control" placeholder="Variación (positivo o negativo)">
                <input type="number" id="nuevoPrecio" class="form-control mt-2" placeholder="Nuevo Precio Unitario (opcional)">
                <textarea id="notaStock" class="form-control mt-2" placeholder="Nota"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="guardarStock">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
        <style>
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type=number] {
            -moz-appearance: textfield;
        }
        </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/inventario.js"></script>
}