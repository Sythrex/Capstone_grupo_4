@model List<Web.Models.InventarioViewModel>

@{
    ViewData["Title"] = "Control de Inventario";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Control de Inventario</h6>
        <div class="d-flex flex-wrap align-items-center gap-2">
            <button class="btn btn-primary btn-icon-split" data-toggle="modal" data-target="#agregarRepuestoModal">
                <span class="icon text-white-50"><i class="fas fa-plus"></i></span>
                <span class="text">Agregar Repuesto</span>
            </button>
            <button class="btn btn-warning btn-icon-split" id="editarStockGlobal">
                <span class="icon text-white-50"><i class="fas fa-edit"></i></span>
                <span class="text">Editar Stock</span>
            </button>
            <button class="btn btn-success btn-icon-split" id="guardarCambios" style="display:none;">
                <span class="icon text-white-50"><i class="fas fa-save"></i></span>
                <span class="text">Guardar Cambios</span>
            </button>
            <button class="btn btn-secondary btn-icon-split" id="cancelarEdicion" style="display:none;">
                <span class="icon text-white-50"><i class="fas fa-times"></i></span>
                <span class="text">Cancelar Edición</span>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="inventarioTable" class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>SKU</th>
                        <th>Nombre</th>
                        <th>Marca</th>
                        <th>Categoría</th>
                        <th>Stock Disponible</th>
                        <th>Stock Reservado</th>
                        <th>Precio Unitario</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="notaBatchModal" tabindex="-1" role="dialog" aria-labelledby="notaBatchModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="notaBatchModalLabel">Nota para Cambios</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <textarea id="notaBatch" class="form-control" rows="3" placeholder="Ingrese una nota para estos cambios..."></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="confirmarGuardarBatch">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="agregarRepuestoModal" tabindex="-1" role="dialog" aria-labelledby="agregarRepuestoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="agregarRepuestoModalLabel">Agregar Repuesto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="tipoNuevo" name="tipoAgregar" value="nuevo" class="custom-control-input" checked>
                        <label class="custom-control-label" for="tipoNuevo">Nuevo Repuesto</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="tipoExistente" name="tipoAgregar" value="existente" class="custom-control-input">
                        <label class="custom-control-label" for="tipoExistente">Repuesto Existente</label>
                    </div>
                </div>

                <div id="nuevoRepuestoForm">
                    <div class="row">
                        <div class="col-sm-12 col-md-6 form-group">
                            <label>SKU</label>
                            <input type="text" id="nuevoSku" class="form-control" placeholder="SKU">
                        </div>
                        <div class="col-sm-12 col-md-6 form-group">
                            <label>Nombre</label>
                            <input type="text" id="nuevoNombre" class="form-control" placeholder="Nombre">
                        </div>
                        <div class="col-sm-12 col-md-6 form-group">
                            <label>Marca</label>
                            <input type="text" id="nuevaMarca" class="form-control" placeholder="Marca">
                        </div>
                        <div class="col-sm-12 col-md-6 form-group">
                            <label>Categoría</label>
                            <select id="nuevaCategoria" class="form-control">
                                @foreach (var cat in ViewBag.Categorias)
                                {
                                    <option value="@cat.id">@cat.nombre</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div id="existenteRepuestoForm" style="display:none;">
                    <div class="table-responsive">
                        <table id="repuestosTable" class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>SKU</th>
                                    <th>Nombre</th>
                                    <th>Marca</th>
                                    <th>Categoría</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="guardarAgregar">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editarStockModal" tabindex="-1" role="dialog" aria-labelledby="editarStockLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editarStockLabel">Editar Stock</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editRepuestoId">
                <div class="row">
                    <div class="col-sm-12 col-md-6 form-group">
                        <label for="variacionStock">Variación (positivo o negativo)</label>
                        <input type="number" id="variacionStock" class="form-control" placeholder="Variación (positivo o negativo)">
                    </div>
                    <div class="col-sm-12 col-md-6 form-group">
                        <label for="nuevoPrecio">Nuevo Precio Unitario (opcional)</label>
                        <input type="number" id="nuevoPrecio" class="form-control" placeholder="Nuevo Precio Unitario (opcional)">
                    </div>
                </div>
                <div class="form-group">
                    <label for="notaStock">Nota</label>
                    <textarea id="notaStock" class="form-control" placeholder="Nota" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="guardarStock">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type=number] {
            -moz-appearance: textfield;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/inventario.js"></script>
}