@model Web.Models.InventarioDetalleViewModel

@{
    ViewData["Title"] = "Detalles de Repuesto";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@Model.Nombre - SKU: @Model.Sku</h6>
        <a href="javascript:history.back()" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50"><i class="fas fa-arrow-left"></i></span>
            <span class="text">Volver</span>
        </a>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Marca</dt>
            <dd class="col-sm-9">@Model.Marca</dd>
            <dt class="col-sm-3">Categoría</dt>
            <dd class="col-sm-9">@Model.CategoriaNombre</dd>
            <dt class="col-sm-3">Stock Disponible</dt>
            <dd class="col-sm-9">@Model.StockDisponible</dd>
            <dt class="col-sm-3">Stock Reservado</dt>
            <dd class="col-sm-9">@Model.StockReservado</dd>
            <dt class="col-sm-3">Precio Unitario</dt>
            <dd class="col-sm-9">@Model.PrecioUnitario.ToString("C0", new System.Globalization.CultureInfo("es-CL"))</dd>
        </dl>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Editar Stock Unitario</h6>
    </div>
    <div class="card-body">
        <form id="editForm">
            <input type="hidden" id="editRepuestoId" value="@Model.RepuestoUnidadesId">
            <div class="form-group">
                <label for="variacionDisp">Variación Stock Disponible</label>
                <input type="number" id="variacionDisp" class="form-control" value="0">
            </div>
            <div class="form-group">
                <label for="variacionRes">Variación Stock Reservado</label>
                <input type="number" id="variacionRes" class="form-control" value="0">
            </div>
            <div class="form-group">
                <label for="nuevoPrecio">Nuevo Precio Unitario (opcional)</label>
                <input type="number" id="nuevoPrecio" class="form-control">
            </div>
            <div class="form-group">
                <label for="notaStock">Nota</label>
                <textarea id="notaStock" class="form-control" rows="3"></textarea>
            </div>
            <button type="button" class="btn btn-primary btn-icon-split" id="guardarStockUnitario">
                <span class="icon text-white-50"><i class="fas fa-save"></i></span>
                <span class="text">Guardar</span>
            </button>
        </form>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Logs</h6>
    </div>
    <div class="card-body">
        <div id="logsContainer"></div>
    </div>
</div>

<button class="btn btn-danger btn-icon-split mt-3" id="eliminarAsignacion">
    <span class="icon text-white-50"><i class="fas fa-trash"></i></span>
    <span class="text">Eliminar de Inventario</span>
</button>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/inventario-detalle.js"></script>
}