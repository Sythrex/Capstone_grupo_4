@model IEnumerable<Infrastructure.Persistence.Models.cliente>
@{
    ViewData["Title"] = "Clientes (Top 100)";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Clientes (Top 100)</h6>
        <a class="btn btn-primary" asp-action="Create">+ Nuevo Cliente</a>
    </div>
    <div class="card-body">
        @if (Model is null || !Model.Any())
        {
            <div class="alert alert-info">No hay registros para mostrar.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th class="text-nowrap">id</th>
                            <th class="text-nowrap">rut</th>
                            <th>nombre</th>
                            <th>correo</th>
                            <th class="text-nowrap">telefono</th>
                            <th>direccion</th>
                            <th>comuna</th>
                            <th>region</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td class="text-nowrap">@c.id</td>
                                <td class="text-nowrap">@c.rut</td>
                                <td>@c.nombre</td>
                                <td>@c.correo</td>
                                <td class="text-nowrap">@c.telefono</td>
                                <td>@c.direccion</td>
                                <td>@(c.comuna?.nombre ?? "Sin Comuna")</td>
                                <td>@(c.comuna?.region?.nombre ?? "Sin Region")</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm d-flex flex-wrap justify-content-end">
                                        <a class="btn btn-outline-secondary me-1 mb-1" asp-action="Details" asp-route-id="@c.id">Detalles</a>
                                        <a class="btn btn-outline-warning me-1 mb-1" asp-action="Edit" asp-route-id="@c.id">Editar</a>
                                        <a class="btn btn-outline-danger mb-1" asp-action="Delete" asp-route-id="@c.id">Eliminar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>