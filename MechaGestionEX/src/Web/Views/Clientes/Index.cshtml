@model IEnumerable<Infrastructure.Persistence.Models.cliente>
@{
    ViewData["Title"] = "Clientes (Top 100)";
}

<h1 class="mb-4">Clientes (Top 100)</h1>

<div class="d-flex justify-content-between mb-3">
    <a class="btn btn-primary" asp-action="Create">+ Nuevo Cliente</a>
</div>

@if (Model is null || !Model.Any())
{
    <div class="alert alert-info">No hay registros para mostrar.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-sm align-middle">
            <thead>
                <tr>
                    <th>id</th>
                    <th>rut</th>
                    <th>nombre</th>
                    <th>correo</th>
                    <th>telefono</th>
                    <th>direccion</th>
                    <th>comuna</th>
                    <th>region</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.id</td>
                        <td>@c.rut</td>
                        <td>@c.nombre</td>
                        <td>@c.correo</td>
                        <td>@c.telefono</td>
                        <td>@c.direccion</td>
                        <td>@(c.comuna?.nombre ?? "Sin Comuna")</td>
                        <td>@(c.comuna?.region?.nombre ?? "Sin Region")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Details" asp-route-id="@c.id">Detalles</a>
                            <a class="btn btn-sm btn-outline-warning me-1" asp-action="Edit" asp-route-id="@c.id">Editar</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
