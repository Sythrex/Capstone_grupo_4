@model ErrorViewModel
@{
    ViewData["Title"] = "Error interno";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 fw-bold">Ups...</h1>
            <h2 class="mb-3">Ha ocurrido un error interno en el servidor.</h2>

            @if (Model.ShowRequestId)
            {
                <p class="text-muted">
                    <strong>ID de seguimiento:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <p class="lead mb-4">
                Si el problema persiste, contacta al administrador del sistema.
            </p>

            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                Volver al inicio
            </a>
        </div>
    </div>
</div>
