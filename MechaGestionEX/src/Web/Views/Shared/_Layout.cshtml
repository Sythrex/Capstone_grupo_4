<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Taller Mecánico</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="d-flex" id="wrapper">
        <div class="bg-dark border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-white">Menú Principal</div>
            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white"><i class="bi bi-calendar-plus me-2"></i> Agendar Hora</a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white"><i class="bi bi-card-list me-2"></i> Ver Historial</a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white"><i class="bi bi-car-front me-2"></i> Mis Vehículos</a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white"><i class="bi bi-tools me-2"></i> Control de Stock</a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white"><i class="bi bi-file-earmark-bar-graph me-2"></i> Reportes</a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom">
                <div class="container-fluid">
                    <span class="navbar-brand">Panel de Control</span>
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item">
                                <a href="#" class="btn btn-outline-light"><i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main role="main" class="container-fluid p-4">
                @RenderBody()
            </main>

            <footer class="border-top footer text-muted bg-dark">
                <div class="container text-center text-white py-3">
                    &copy; 2025 - Mi Taller App
                </div>
            </footer>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>