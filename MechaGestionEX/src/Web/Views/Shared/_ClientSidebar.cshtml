@{
    string C(string c) => string.Equals(Convert.ToString(ViewContext.RouteData.Values["controller"]), c, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    string CA(string c, string a) =>
        string.Equals(Convert.ToString(ViewContext.RouteData.Values["controller"]), c, StringComparison.OrdinalIgnoreCase) &&
        string.Equals(Convert.ToString(ViewContext.RouteData.Values["action"]), a, StringComparison.OrdinalIgnoreCase) ? "active" : "";
}
<div class="d-flex flex-column gap-1 p-3">
    <h6 class="text-uppercase text-secondary px-2 mt-3 mb-2">Servicios</h6>

    <a class="nav-link px-3 py-2 rounded @CA("Cliente", "Historial")"
       asp-controller="Cliente" asp-action="Historial">
        <i class="bi bi-clock-history me-2"></i> Ver historial
    </a>

    <a class="nav-link px-3 py-2 rounded @CA("Cliente", "Agenda")"
       asp-controller="Cliente" asp-action="Agenda">
        <i class="bi bi-calendar-week me-2"></i> Mis citas
    </a>

    <h6 class="text-uppercase text-secondary px-2 mt-3 mb-2">Cuenta</h6>

    <a class="nav-link px-3 py-2 rounded disabled">
        <i class="bi bi-person-gear me-2"></i> Mis datos
    </a>
</div>