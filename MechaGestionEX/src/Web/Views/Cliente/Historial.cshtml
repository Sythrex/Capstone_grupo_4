@model List<Web.Models.AtencionHistRow>
@{
    ViewData["Title"] = "Historial de atenciones";
    Layout = "_Layout_Cliente";
}

<div class="container py-4">
    <h2 class="mb-3">Historial de atenciones</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-secondary">Aún no tienes atenciones registradas.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Estado</th>
                        <th>Taller</th>
                        <th style="width:1%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@(x.FechaHora?.ToString("dd-MM-yyyy HH:mm") ?? "-")</td>
                            <td>@(string.IsNullOrWhiteSpace(x.Estado) ? "Pendiente" : x.Estado)</td>
                            <td>@(string.IsNullOrWhiteSpace(x.Taller) ? "-" : x.Taller)</td>
                            <td class="text-nowrap">
                                @if (x.AtencionId > 0)
                                {
                                    <a class="btn btn-sm btn-primary"
                                       asp-controller="Cliente" asp-action="Atencion"
                                       asp-route-id="@x.AtencionId">
                                        Ver detalle
                                    </a>
                                }
                                else
                                {
                                    <span class="text-body-secondary">—</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>