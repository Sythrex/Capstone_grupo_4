@model Web.Models.MisDatosViewModel

@{
    ViewData["Title"] = "Mis Datos";
    Layout = "_Layout_Cliente";
}

<h2>Mis Datos Personales</h2>

<form asp-action="MisDatos" method="post">
    <div class="form-group mb-3">
        <label asp-for="Rut"></label>
        <input asp-for="Rut" class="form-control" />
        <span asp-validation-for="Rut" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ComunaId"></label>
        <select asp-for="ComunaId" asp-items="Model.Comunas" class="form-control"></select>
        <span asp-validation-for="ComunaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>