@{
    ViewData["Title"] = "Mis Citas";
    Layout = "_Layout_Cliente";
}

@if (ViewBag.TieneTalleres)
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Agenda de atenciones</h1>
        <div class="d-flex align-items-center">
            <label class="text-light me-2">Taller:</label>
            <select id="tallerSelect" class="form-select select2" style="width: 200px;" data-placeholder="Seleccione taller"></select>
            <a href="@Url.Action("CreateAgenda", "Cliente")" class="btn btn-primary ms-3">
                <i class="bi bi-plus-circle me-2"></i>Solicitar nueva hora
            </a>
        </div>
    </div>

    <div id="calendario"></div>
}
else
{
    <div class="alert alert-info mt-4">
        No posee talleres asignados. Contacte al administrador de su taller para que sea asignado.
    </div>
}

@section Scripts {
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.13/index.global.min.js'></script>
    <script src="~/js/agenda-calendario-cliente.js"></script>
}