@{
    ViewData["Title"] = "Historial de atenciones";
    Layout = "_Layout_Cliente";    // o Layout = null;
}


<div class="container-fluid">
    <h2 class="mb-3">Bienvenido, @User.Identity?.Name</h2>

    <div class="row g-3">
        <div class="col-12 col-md-6">
            <div class="card rounded-4 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Resumen</h5>
                    <p class="text-body-secondary">Aquí puedes ver el estado general de tus citas y atenciones.</p>
                    <a class="btn btn-primary" asp-controller="Agenda" asp-action="Index">
                        Ver mis citas
                    </a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="card rounded-4 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Resumen</h5>
                    <p class="text-body-secondary">Aquí puedes ver el estado general de tus citas y atenciones.</p>
                    <a class="btn btn-primary mt-3" asp-controller="Cliente" asp-action="Historial">
                        Ver historial de atenciones
                    </a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="card rounded-4 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Acción rápida</h5>
                    <p class="text-body-secondary">Agenda una nueva visita al taller en minutos.</p>
                    <a class="btn btn-outline-primary" asp-controller="Agenda" asp-action="Create">
                        Agendar nueva
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
